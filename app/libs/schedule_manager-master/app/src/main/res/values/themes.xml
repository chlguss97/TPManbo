<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Newcalendar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/classicBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/sc_dream4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="saveToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/classicBlue</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/classicBlue</item>
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">20dp</item>
    </style>
    <style name="deleteToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/red</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/red</item>
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">20dp</item>
    </style>

    <style name="CalendarWidgetHeader">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sc_dream5</item>
    </style>
    <style name="CalendarWidgetWeek">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sc_dream4</item>
    </style>
    <style name="CalendarWidgetDay">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sc_dream4</item>
    </style>
    <style name="TimePickerTheme">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="ModifyTimePickerTheme">
        <item name="android:textColorPrimary">@color/classicBlue</item>
    </style>
</resources>