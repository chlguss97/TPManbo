<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SettingActivity"
    android:padding="16dp"
    android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        android:layout_marginBottom="20dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:src="@drawable/profle"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="40sp"
        android:fontFamily="@font/font_mitme"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_box"
            android:fontFamily="@font/font_mitme"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="qwerty"
            android:textSize="32sp" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_border_color_24"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_nickname"
            android:layout_marginLeft="8dp"/>



    </RelativeLayout>








    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="목표 걸음 수"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="40sp"
        android:fontFamily="@font/font_mitme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_target_step"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_box"
            android:fontFamily="@font/font_mitme"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="1234 걸음 수"
            android:textSize="32sp" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_border_color_24"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_target_step"
            android:layout_marginLeft="8dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표 걸음 수 알림"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:fontFamily="@font/font_mitme" />


        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_notify"
            android:layout_alignTop="@id/tv_notify"
            android:layout_marginLeft="16dp"
            android:layout_alignBottom="@id/tv_notify"/>






    </RelativeLayout>












</LinearLayout>