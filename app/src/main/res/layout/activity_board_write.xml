<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.BoardWriteActivity"
    android:padding="16dp"
    android:background="@color/white">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:text="자유 게시판 글쓰기"
    android:textColor="@color/black"
    android:textSize="40sp"
    android:fontFamily="@font/font_mitme"
    android:textStyle="bold" />

<EditText
    android:id="@+id/titleArea"
    style="@style/ContentEditText"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:fontFamily="@font/font_mitme"
    android:hint="제목"
    android:textSize="28sp" />

<EditText
    android:id="@+id/contentArea"
    style="@style/ContentEditText"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="20dp"
    android:gravity="top"
    android:fontFamily="@font/font_mitme"
    android:hint="내용을 자유롭게 입력해 보세요."
    android:textSize="24sp" />

<Button
    android:id="@+id/writeBtn"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="20dp"
    android:text="작성하기"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:backgroundTint="@color/deepdeeppink"/>

</LinearLayout>


